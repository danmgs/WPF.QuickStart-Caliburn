<UserControl x:Class="WPF.QuickStart.UI.Views.Twitter.TwitterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"   
             xmlns:ctrl="clr-namespace:WPF.QuickStart.UI.Common.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid">
    <UserControl.Resources>
        <ResourceDictionary>
            <x:Array x:Key="countElements" Type="sys:String" 
            xmlns:sys="clr-namespace:System;assembly=mscorlib">
                <sys:String>20</sys:String>
                <sys:String>50</sys:String>
                <sys:String>100</sys:String>
            </x:Array>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Width="Auto" Height="Auto" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBlock Text="{Binding DisplayName}" Style="{StaticResource HeaderStyle}"/>
        </StackPanel>

        <Grid Width="Auto" Height="Auto" Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500" />
                <ColumnDefinition Width="500" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical" Background="Salmon">

                <TextBlock Style="{StaticResource subTitleStyle}"  DockPanel.Dock="Top" Text="View tweets From .." HorizontalAlignment="Left" />

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Screen name : " Width="159"/>
                    <ComboBox 
                    x:Name="ScreenNameCombo" 
                    ItemsSource="{Binding TwitterScreenNames}" 
                    SelectedValue="{Binding ScreenName, Mode=TwoWay}" 
                    cal:Message.Attach="[Event SelectionChanged] = [Action OnScreenNameSelectionChanged($this,$eventArgs)]">
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Number of tweets to display : "/>
                    <ComboBox 
                    x:Name="CountCombo" 
                    ItemsSource="{Binding CountElements}" 
                    IsSynchronizedWithCurrentItem="True"
                    cal:Message.Attach="[Event SelectionChanged] = [Action OnCountSelectionChanged($this,$eventArgs)]" Width="80">
                    </ComboBox>
                </StackPanel>

                <Button x:Name="Load" Content="Load Tweets" />
            </StackPanel>

            <DockPanel Grid.Column="1" Grid.Row="1" Background="CadetBlue" LastChildFill="False">

                <TextBlock Style="{StaticResource subTitleStyle}"  DockPanel.Dock="Top" Text="Make a search" HorizontalAlignment="Left" />

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                    <TextBlock Text="Keyword : " />
                    <TextBox x:Name="Keyword" Width="155" />
                </StackPanel>

                <Button x:Name="Search" Content="Search" DockPanel.Dock="Bottom"/>
            </DockPanel>

        </Grid>

        <!--<DataGrid 
            Grid.Column="0" Grid.Row="1"
            AutoGenerateColumns="True"
            Width="Auto"
            Margin="0,10"
            ItemsSource="{Binding Tweets}"
            ScrollViewer.CanContentScroll="True" 
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto">
        </DataGrid>-->

        <Grid Grid.Column="0" Grid.Row="2">
        
            <xcdg:DataGridControl 
                x:Name="_dataGrid"            
                MinHeight="400"
                MinWidth="1000" 
                Width="Auto"
                Margin="0,10"
                AutoCreateColumns="False"
                IsEnabled="False"
                ItemsSource="{Binding Tweets}">

                <xcdg:DataGridControl.Columns>
                    <xcdg:Column Title="Date" FieldName="Date" VisiblePosition="0"/>
                    <xcdg:Column Title="ScreenName" FieldName="ScreenName" VisiblePosition="1"/>
                    <xcdg:Column Title="Status" FieldName="Text" VisiblePosition="2" MinWidth="400" />
                </xcdg:DataGridControl.Columns>
                <xcdg:DataGridControl.View>
                    <xcdg:TableView ColumnStretchMode="All" ColumnStretchMinWidth="100" />
                </xcdg:DataGridControl.View>

            </xcdg:DataGridControl>

            <xctk:BusyIndicator IsBusy="{Binding IsBusy}" />

        </Grid>

    </Grid>

</UserControl>