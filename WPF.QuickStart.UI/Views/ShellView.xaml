<Window x:Class="WPF.QuickStart.UI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:cal="http://www.caliburnproject.org"   
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource WindowStyle}">

    <DockPanel Background="LightBlue">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="ShowMultiTabsScreen" Content="Tabs Panel" />
            <Button x:Name="ShowRedScreen" Content="Historical Data" />
            <Button x:Name="ShowGreenScreen" Content="Connect Data Yahoo" />
            <Button x:Name="ShowTwitterViewByScreen" Content="View Tweets By" />
            <Button x:Name="ShowBlueScreen" Content="Twitter Summary" />
        </StackPanel>

        <ContentControl DockPanel.Dock="Top" x:Name="ActiveItem" Height="750"/>

        <TextBlock x:Name="StatusBar" DockPanel.Dock="Bottom" Text="{Binding StatusBarContent}" HorizontalAlignment="Left" Width="Auto" Height="Auto" Background="Red" />

    </DockPanel>

</Window>