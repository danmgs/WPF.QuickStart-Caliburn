<Window x:Class="WPF.QuickStart.UI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:cal="http://www.caliburnproject.org"   
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource WindowStyle}">

    <DockPanel Background="LightBlue">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="ShowTwitterMultiTabsScreen" Content="Twitter" />
            <Button x:Name="ShowYahooMultiTabsScreen" Content="Yahoo !" />
            <Button x:Name="ShowConnectDataMultiTabsScreen" Content="Connect Data" />
        </StackPanel>

        <ContentControl DockPanel.Dock="Top" x:Name="ActiveItem" Height="750"/>

        <TextBlock x:Name="StatusBar" DockPanel.Dock="Bottom" Text="{Binding StatusBarContent}" HorizontalAlignment="Left" Width="Auto" Height="Auto" Background="Red" />

    </DockPanel>

</Window>