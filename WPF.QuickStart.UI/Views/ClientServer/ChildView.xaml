        <DockPanel DockPanel.Dock="Top">
            <Button DockPanel.Dock="Left" x:Name="ConnectBtn" Content="Connect" ToolTip="Connect to the server" IsEnabled="{Binding !Connected}" />
            <Button DockPanel.Dock="Right" x:Name="GetDataSourceList" Content="GetDataSourceList" IsEnabled="{Binding Connected}" HorizontalAlignment="Right" />
        </DockPanel>

        <StackPanel DockPanel.Dock="Top" Margin="0,20">
            <TextBlock Style="{StaticResource subTitleStyle}" Text="Server Responses History"/>
            <ListView ItemsSource="{Binding ServerResponseItems}" Height="200" Width="800" />
        </StackPanel>

        <StackPanel>
            <TextBlock Style="{StaticResource subTitleStyle}" Text="Detailed Items"/>
            <ListView ItemsSource="{Binding MyCollectionItems}" Height="400" Width="800" />
        </StackPanel>

    </DockPanel>

</UserControl>