<UserControl x:Class="WPF.QuickStart.UI.Views.Yahoo.WatchListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:WPF.QuickStart.UI.Common.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
             HorizontalAlignment="Center">

    <StackPanel Height="Auto">

        <TextBlock Text="{Binding DisplayName}" Style="{StaticResource HeaderStyle}"/>

        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="SecurityCodeTxt" Text="Security Code" />
                <TextBox x:Name="SecurityCode"  Width="134" ToolTip="Input code. Exple : YHOO, MSCI .." />
            </StackPanel>
            <Button x:Name="AddSingleStock" Content="Add Stock" HorizontalAlignment="Left" Margin="10,10" />
        </StackPanel>

        <Grid Margin="0,10">

            <xcdg:DataGridControl 
                x:Name="_dataGrid" 
                MaxHeight="400"
                MinHeight="400"
                MinWidth="1000"
                Width="Auto"
                ItemsSource="{Binding Quotes}"/>
        </Grid>

    </StackPanel>

</UserControl>    
