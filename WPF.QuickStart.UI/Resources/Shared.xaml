    <!-- End Custom Color Palette -->

    <Style x:Key="windowBaseStyle" TargetType="Window">
        <Setter Property="Icon" Value="/Images/icontwitter.ico" />
    </Style>

    <Style x:Key="WindowStyle" BasedOn="{StaticResource windowBaseStyle}" TargetType="Window">
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="MinWidth" Value="800" />
        <Setter Property="MinHeight" Value="600" />
        <Setter Property="ResizeMode" Value="CanResizeWithGrip" />
        <Setter Property="WindowState" Value="Maximized" />
        <!--<Setter Property="Foreground" Value="#CC119EDA" />-->
        <Setter Property="Title" Value="MainWindow" />
    </Style>

    <Style x:Key="HeaderFooterStyle" TargetType="{x:Type Panel}">
        <Setter Property="Background" Value="AntiqueWhite" />
    </Style>

    <Style x:Key="StatusBar" TargetType="{x:Type TextBlock}">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Foreground" Value="{DynamicResource AccentColorBrush}" />
    </Style>

    <Style x:Key="baseStyle" TargetType="{x:Type Control}">
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="Height" Value="30" />
    </Style>

    <Style x:Key="baseStyleTextBlock" TargetType="{x:Type TextBlock}">
        <!-- Styles below are applied to all Textblocks, including the ones inside control (visual styles tree) -->
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Margin" Value="10,0" />
    </Style> 
    
    <Style BasedOn="{StaticResource baseStyleTextBlock}" TargetType="{x:Type TextBlock}">        
    </Style>

    <Style x:Key="baseStyleTitleTextBlock" BasedOn="{StaticResource baseStyleTextBlock}" TargetType="{x:Type TextBlock}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="Margin" Value="10,10" />
    </Style>

    <Style x:Key="HeaderStyle" BasedOn="{StaticResource baseStyleTitleTextBlock}" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Foreground" Value="{DynamicResource AccentColorBrush}" />
    </Style>

    <Style x:Key="noteHeaderStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="Foreground" Value="{DynamicResource AccentColorBrush2}" />
    </Style>    

    <Style x:Key="subTitleStyle" BasedOn="{StaticResource baseStyleTitleTextBlock}" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Foreground" Value="{DynamicResource AccentColorBrush}" />
    </Style>

    <Style x:Key="categoryBtn" BasedOn="{StaticResource AccentedSquareButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="110" />
        <Setter Property="Height" Value="50" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="Padding" Value="5,1,5,1" />
        <Setter Property="Margin" Value="10,5" />        
    </Style>  

</ResourceDictionary> 